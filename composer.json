{
    "require-dev": {
        "php-stubs/woocommerce-stubs": "^7.8",
        "wp-coding-standards/wpcs": "^2.3",
        "wpify/scoper": "3.1.3"
    },
    "minimum-stability": "dev",
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "wpify/scoper": true
        }
    },
    "extra": {
        "wpify-scoper": {
            "prefix": "KrokedilPaysonDeps",
            "folder": "dependencies",
            "autorun": true,
            "globals": [
                "wordpress",
                "woocommerce"
            ]
        }
    }
}
